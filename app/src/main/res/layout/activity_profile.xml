<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.therock.practicaactividades.ProfileActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="30dp"
        android:layout_weight="1"
        android:src="@drawable/imagen_perfil" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:text="@string/miCorreo"
        android:textSize="20sp"
        android:layout_marginLeft="10sp"/>
    <TextView
        android:id="@+id/tCorreoProfile"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:text="@string/correo"
        android:textSize="20sp"
        android:layout_marginLeft="10sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:text="@string/miContrasena"
        android:textSize="20sp"
        android:layout_marginLeft="10sp"
        android:id="@+id/tlabelMicontrasena"/>
    <TextView
        android:id="@+id/tContrasenaProfile"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:text="@string/contrasena"
        android:textSize="20sp"
        android:layout_marginLeft="10sp"/>
</LinearLayout>
